---
import Logo from "../assets/icons/logo.svg";
import InstaLogo from "../assets/icons/instagram.svg";
import TwitterLogo from "../assets/icons/twitter.svg";
import FacebookLogo from "../assets/icons/facebook.svg";
import YoutubeLogo from "../assets/icons/youtube.svg";
---

<footer class="bg-sky-950 text-white p-4 lg:p-8 mt-12">
    <div class="container mx-auto">
        <!-- Desktop Layout using grid -->
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
            <!-- Logo and Festival Info -->
            <div class="lg:col-span-4 mb-6 lg:mb-0">
                <div class="flex items-center">
                    <Logo />
                    <div class="ml-4">
                        <h2 class="text-lg lg:text-xl font-bold">
                            Flash Cinéma 25
                        </h2>
                        <p class="text-sm lg:text-base text-gray-300">
                            1ère édition du 8 au 10 Août 2025
                        </p>
                    </div>
                </div>
                <p class="mt-4 text-sm lg:text-base text-gray-300 lg:pr-8">
                    Festival de courts-métrages au cœur de la région Bourgogne
                    Franche-Comté
                </p>
            </div>

            <!-- Legal Links -->
            <div class="lg:col-span-3 mb-6 lg:mb-0">
                <p
                    class="uppercase text-sm lg:text-base text-gray-400 font-bold mb-3"
                >
                    Légal
                </p>
                <nav>
                    <ul class="space-y-2">
                        <li>
                            <a
                                class="text-sm lg:text-base hover:text-orange-400 transition-colors"
                                href="/mentions-legales">Mentions légales</a
                            >
                        </li>
                        <li>
                            <a
                                class="text-sm lg:text-base hover:text-orange-400 transition-colors"
                                href="/politique-confidentialite"
                                >Politique de confidentialité</a
                            >
                        </li>
                        <li>
                            <a
                                class="text-sm lg:text-base hover:text-orange-400 transition-colors"
                                href="/credits">Crédits</a
                            >
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Contact Info -->
            <div class="lg:col-span-3 mb-6 lg:mb-0">
                <p
                    class="uppercase text-sm lg:text-base text-gray-400 font-bold mb-3"
                >
                    Contact
                </p>
                <div class="space-y-2">
                    <a
                        class="text-sm lg:text-base block hover:text-orange-400 transition-colors"
                        href="mailto:contact@flashcinema25.com"
                        >contact@flashcinema25.com</a
                    >
                    <p class="text-sm lg:text-base">
                        15 rue Saint-Laurent<br />25290 Ornans
                    </p>
                    <a
                        class="text-sm lg:text-base hover:text-orange-400 transition-colors"
                        href="tel:+33383454545">03 83 45 45 45</a
                    >
                </div>
            </div>

            <!-- Social Media Links -->
            <div class="lg:col-span-2">
                <p
                    class="uppercase text-sm lg:text-base text-gray-400 font-bold mb-3"
                >
                    Suivez-nous
                </p>
                <div class="flex space-x-4">
                    <a
                        href="#"
                        class="text-gray-300 hover:text-white transition-colors"
                        aria-label="Instagram"
                    >
                        <InstaLogo class="w-6 h-6" />
                    </a>
                    <a
                        href="#"
                        class="text-gray-300 hover:text-white transition-colors"
                        aria-label="Twitter"
                    >
                        <TwitterLogo class="w-6 h-6" />
                    </a>
                    <a
                        href="#"
                        class="text-gray-300 hover:text-white transition-colors"
                        aria-label="Facebook"
                    >
                        <FacebookLogo class="w-6 h-6" />
                    </a>
                    <a
                        href="#"
                        class="text-gray-300 hover:text-white transition-colors"
                        aria-label="Youtube"
                    >
                        <YoutubeLogo class="w-6 h-6" />
                    </a>
                </div>
            </div>
        </div>

        <!-- Bottom Bar with Copyright -->
        <div
            class="border-t border-sky-900 mt-8 pt-4 lg:pt-6 text-center lg:flex lg:justify-between lg:items-center"
        >
            <p class="text-xs lg:text-sm text-gray-400">
                &copy; 2025 Flash Cinéma 25. Tous droits réservés.
            </p>
        </div>
    </div>
</footer>
